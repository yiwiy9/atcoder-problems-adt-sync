{
    "manifest_version": 3,
    "name": "AtCoder Problems ADT Sync",
    "version": "1.0.0",
    "description": "Automatically sync your AtCoder Daily Training (ADT) submissions to AtCoder Problems for complete progress tracking & visualization.",
    "icons": {
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "https://kenkoooo.com/atcoder/*"
            ]
        }
    ],
    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "pkg/*"
            ],
            "matches": [
                "https://kenkoooo.com/*"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    }
}